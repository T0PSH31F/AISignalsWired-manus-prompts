# ----- APPLICATION -----
NODE_ENV="development"  # Change to "production" when live
PORT=3000
FRONTEND_PORT=5173

# Domain & URLs
DOMAIN="aisignalswired.com"
FRONTEND_URL="https://aisignalswired.com"
BACKEND_URL="https://api.aisignalswired.com"
API_VERSION="v1"

# ----- SECURITY -----
CORS_ORIGIN="https://aisignalswired.com,https://www.aisignalswired.com"
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_FREE_TIER=100     # requests per window
RATE_LIMIT_BASIC_TIER=300
RATE_LIMIT_PREMIUM_TIER=1000
RATE_LIMIT_ELITE_TIER=5000

# ----- ADMIN -----
ADMIN_EMAIL="admin@aisignalswired.com"
ADMIN_PASSWORD="change-this-immediately"
ADMIN_ALERTS_ENABLED=true

# ----- SIGNAL ENGINE -----
SIGNAL_GENERATION_INTERVAL="*/15 * * * *"  # Every 15 minutes
MIN_CONFIDENCE_SCORE=75
RISK_MANAGEMENT_STRICT=true
CIRCUIT_BREAKER_WIN_RATE_THRESHOLD=0.55
STRATEGY_PAUSE_WIN_RATE_THRESHOLD=0.60

# ----- MONITORING -----
SENTRY_DSN="https://xxxx@sentry.io/xxxx"  # Optional error tracking
LOG_LEVEL="info"  # debug, info, warn, error
ENABLE_PERFORMANCE_MONITORING=true

# ----- FEATURES FLAGS -----
ENABLE_API_ACCESS=true
ENABLE_WEBSOCKET=true
ENABLE_BACKTESTING=false  # Coming soon
ENABLE_PAPER_TRADING=false  # Coming soon

